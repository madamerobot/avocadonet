doctype html
html
	head
		title Post Detail
		link(rel='stylesheet', type='text/css', href='/css/style.css')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
			ga('create', 'UA-104315848-3', 'auto');
			ga('send', 'pageview');

	body.whitebg
		.container
			// SHOULD BE 80% OF SCREEN WIDTH
			.navigation
				.links
					.logo
						a.pacificologo(href='/myprofile') The Avocado Net
					.menueitem
						a.linkcopy(href='/myprofile') My profile
					.menueitem
						a.linkcopy(href='/addpost') Add post
					.menueitem
						a.linkcopy(href='/allpostings') All postings
					.menueitem
						a.linkcopy(href='/logout') Logout
			// closing navigation
			// SHOULD BE 80% OF SCREEN WIDTH, CENTERED
			.postintro Posted by #{username} on #{date}
			.postbox
				.postinner.postdetail.gradientbg #{postingcontent}
			// closing body div
			.comments
				.commentarea
					div Got anything to add?
					form.linebreak(action=`/comment/${postId}`, method='POST', autocomplete='off' id='form')
						textarea.addcomment(name='comment')
						input.button(type='submit' value='Post comment')
					div.line Comments
					.onecomment
					each hit in comments
						.comment #{hit.comment}
						p
						p=commentusername
						.author posted by user #{hit.userId} on #{hit.createdAt}
				