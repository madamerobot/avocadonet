doctype html
html
	head
		title Post Detail
		link(rel='stylesheet', type='text/css', href='css/style.css')
	body.whitebg
		.main
			.container
				// SHOULD BE 80% OF SCREEN WIDTH
				.navigation
					.logo
						a.pacificologo(href='/index') The Avocado Net
					.links
						.menueitem
							a.linkcopy(href='/myprofile') My profile
						.menueitem
							a.linkcopy(href='/addpost') Add post
						.menueitem
							a.linkcopy(href='/allpostings') All postings
						.menueitem
							a.linkcopy(href='') Logout
				// closing navigation
				// SHOULD BE 80% OF SCREEN WIDTH, CENTERED
				.intro Posted by #{username} on #{date}
				.postbox.gradientbg
					.postinner.postdetail=postingcontent
				// closing body div
				.comments
					div Comments
					.onecomment
					each hit in comments
						.comment=hit.comment
						.author Written by user #{hit.userId}
				.writecomment.comments
					div Got something to add?
					form.linebreak(action=`/comment/${postId}`, method='POST', autocomplete='off' id='form')
						textarea.addcomment(name='comment')
						input.button(type='submit')