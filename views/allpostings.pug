doctype html
html
	head
		title All postings
		link(rel='stylesheet', type='text/css', href='/css/style.css')
	body.whitebg
		.main
			.container
				// SHOULD BE 80% OF SCREEN WIDTH
				.navigation
					.logo
						a.pacificologo(href='/index') The Avocado Net
					.links
						.menueitem
							a.linkcopy(href='/myprofile') My profile
						.menueitem
							a.linkcopy(href='/addpost') Add post
						.menueitem
							a.linkcopy(href='/allpostings') All postings
						.menueitem
							a.linkcopy(href='') Logout
				// SHOULD BE 80% OF SCREEN WIDTH, CENTERED
				.intro All postings by other Avocadonados
				.postbox
					.postinner
						p.onepost
							.usericon
								| R
							each hit in allpostings
								p.post=hit.post
								p.metadata
									a(href=`/profile/${hit.user.name}`) Posted by #{hit.user.name} at #{hit.createdAt}
