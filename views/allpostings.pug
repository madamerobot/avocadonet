doctype html
html(lang='en')
	head
		meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0')
		include navigation.pug
		include references.pug
		title All Postings
	body
		header.intro-header(style="background-image: url('/img/avocadobg2-purple.png')")
			.container
				.row
					.col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
						.post-heading
							h1 What other Avocado-fans have to say...
		.container
			.row
				.col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
					.post-preview
						each hit in allpostings
							a(href=`/posts/${hit.id}`)
								h2.post-title=hit.post
								p.post-meta Posted by #{hit.user.name} at #{hit.createdAt}
								a(href=`/profile/${hit.user.name}`) Check out #{hit.user.name}'s profile
							hr
	include references_footer.pug

