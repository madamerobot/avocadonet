doctype html
html(lang='en')
	head
		meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0')
		include navigation.pug
		include references.pug
		title Your profile
	body
		header.intro-header(style="background-image: url('/img/avocadobg2-dark.png')")
			.container
				.row
					.col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
						.post-heading
							h1 #{username}'s Avocado Profile 
		.container
			.row
				.col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
					.post-preview
						each hit in posts
							a(href=`/posts/${hit.id}`)
								h2.post-title=hit.post
								p.post-meta Created on #{hit.createdAt}
							hr
	include references_footer.pug